{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"type",
		"keyed",
		"website",
		"platforms",
		"sunc",
		"tags",
		"badges",
		"hidden"
	],
	"properties": {
		"type": {
			"type": "string",
			"description": "Whether the cheat is internal (an executor) or external",
			"enum": ["internal", "external"]
		},
		"keyed": {
			"type": "boolean",
			"description": "Whether the cheat has a key system"
		},
		"website": {
			"type": "string",
			"description": "Official site or landing page",
			"format": "uri"
		},
		"platforms": {
			"type": "array",
			"description": "Platforms supported by this cheat",
			"minItems": 1,
			"uniqueItems": true,
			"items": {
				"enum": ["windows", "macos", "ios", "android"]
			}
		},
		"sunc": {
			"type": "object",
			"description": "sUNC test results per platform",
			"additionalProperties": {
				"type": "object",
				"required": ["scrapId", "key"],
				"additionalProperties": false,
				"properties": {
					"scrapId": {
						"type": "string",
						"description": "Scrap ID used to fetch test data"
					},
					"key": {
						"type": "string",
						"description": "Access key for this cheat's sUNC tests"
					}
				}
			}
		},
		"tags": {
			"type": "array",
			"description": "Filterable traits, e.g. 'decompiler', 'undetected'",
			"uniqueItems": true,
			"__items_old_NOTUSED": {
				"type": "string",
				"pattern": "^[a-z0-9-]+$"
			},
			"items": {
				"enum": [
					"decompiler",
					"undetected",
					"multi-instance",
					"kernel",
					"ai",
					"supports-vng"
				]
			}
		},
		"badges": {
			"type": "array",
			"description": "Special visual badges shown on cards",
			"uniqueItems": true,
			"items": {
				"enum": ["verified", "premium"]
			}
		},
		"hidden": {
			"type": "boolean",
			"description": "Controls whether the exploit is hidden"
		}
	}
}
