{
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features"
    },
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "prettier.useTabs": true,
    "prettier.tabWidth": 4,
    "prettier.singleQuote": false,
    "editor.tabSize": 4,
    "Lua.diagnostics.globals": [
        "fs",
        "json"
    ],
    "json.schemas": [
        {
            "fileMatch": [
                "data/roblox/*/info.json"
            ],
            "url": "./data/schemas/roblox/info.schema.json"
        },
        {
            "fileMatch": [
                "data/roblox/*/points.json"
            ],
            "url": "./data/schemas/roblox/points.schema.json"
        },
        {
            "fileMatch": [
                "data/roblox/prices.json"
            ],
            "url": "./data/schemas/roblox/prices.schema.json"
        }
    ]
}